<div class="container-newComic">
  <form action="/comics/edit/{{comic._id}}" method="POST" class="new-comic" id="new-comic">

    <p class="newComic-title">Edit {{comic.title}}</p>

    <div class="form-input">
      <input type="text" name="title" placeholder="Add title" id="title-newComic" value="{{comic.title}}">
      <label for="title">Title</label>
    </div>

    <div class="form-input">
      <input type="text" name="author" placeholder="Add author" id="author-newComic" value="{{comic.author}}">
      <label for="title">Author</label>
    </div>

    <div class="form-input">
      <input type="number" name="volumeNumber" placeholder="Add volume number" id="number-newComic"
        value="{{comic.volumeNumber}}">
      <label for="volume-number">Volume number</label>
    </div>

    <div class="form-input">
      <input type="text" name="editorial" placeholder="Add editorial" id="editorial-newComic"
        value="{{comic.editorial}}">
      <label for="editorial">Editorial</label>
    </div>

    <div class="form-input">


      <select id="genre" name="genre" value="{{comic.genre}}">
        <option value="action">Action</option>
        <option value="adventure">Adventure</option>
        <option value="comedy">Comedy</option>
        <option value="mystery">Mystery</option>
        <option value="drama">Drama</option>
        <option value="fantasy">Fantasy</option>
        <option value="terror">Terror</option>
        <option value="romance">Romance</option>
      </select>
      <label for="genre">Genre</label>
    </div>



    <div class="form-input">
      <input type="number" name="numberPages" placeholder="Add number of pages" id="pages-newComic"
        value="{{comic.numberPages}}">
      <label for="pages">Number of pages</label>
    </div>

    <div class="form-input">
      <input type="textarea" name="description" placeholder="Add description" id="description-newComic"
        value="{{comic.description}}">
      <label for="description">Description</label>
    </div>

    <div class="form-input">
      <input type="text" name="image" placeholder="Add image url" id="description-newComic" value="{{comic.image}}">
      <label for="image">Image</label>
    </div>

    <div class="form-input">
      <input type="textarea" name="opinion" placeholder="Add your opinion" id="opinion-newComic"
        value="{{comic.opinion}}">
      <label for="opinion">Opinion</label>
    </div>


    {{#if errorMessage}}
    <p class="error">{{errorMessage}}</p>
    {{/if}}

    <div class="button-save">
      <button class="button-style" type="submit">Update comic</button>
    </div>
  </form>
  <a href="/profile"><img src="/img/back.png" width="30px"></a>
</div>